<div class="company-page">
  <div class="company-glass-card">

    <!-- ACTION BAR -->
    <div class="action-group">
      <%= link_to "← Employees", company_employees_path(@company), class: "btn-secondary" %>

      <%= link_to "Documents", company_employee_employee_documents_path(@company, @employee), class: "btn-secondary" %>

      <%= link_to "Salary Structure", company_employee_employee_salary_structures_path(@company, @employee), class: "btn-secondary" %>
      <%= link_to "Monthly Salary", company_employee_employee_monthly_salaries_path(@company, @employee), class: "btn-secondary" %>
      <%= link_to "Salary Ledger", salary_ledger_company_employee_employee_monthly_salary_path(@employee.company, @employee), class: "btn-secondary" %>

      <%= link_to "Edit Employee", edit_company_employee_path(@company, @employee), class: "primary-btn" %>
    </div>

    <!-- HEADER -->
    <div class="employee-header">
      <h2><%= @employee.full_name %></h2>

      <div class="employee-subtitle">
        <span><%= @employee.designation %></span>
        <span class="dot">•</span>
        <span><%= @employee.department.presence || "—" %></span>
        <span class="dot">•</span>
        <span class="status-pill <%= @employee.employee_status %>">
          <%= @employee.employee_status.capitalize %>
        </span>
      </div>
    </div>

    <!-- CONTENT -->
    <div class="employee-details-grid">

      <!-- LEFT COLUMN -->
      <div class="details-section">
        <h4>Contact Information</h4>

        <div class="detail-row">
          <span class="label">Phone</span>
          <span class="value">+91 <%= @employee.phone_number.presence || "—" %></span>
        </div>

        <div class="detail-row">
          <span class="label">Email</span>
          <span class="value"><%= @employee.email.presence || "—" %></span>
        </div>

        <div class="detail-row">
          <span class="label">Address</span>
          <span class="value"><%= @employee.address.presence || "—" %></span>
        </div>
      </div>

      <!-- RIGHT COLUMN -->
      <div class="details-section">
        <h4>Employment Details</h4>

        <div class="detail-row">
          <span class="label">Joining Date</span>
          <span class="value"><%= @employee.joining_date %></span>
        </div>

        <div class="detail-row">
          <span class="label">Salary</span>
          <span class="value">
            ₹ <%= number_with_precision(@employee.salary, precision: 2) %>
          </span>
        </div>

        <div class="detail-row">
          <span class="label">Notes</span>
          <span class="value"><%= @employee.notes.presence || "—" %></span>
        </div>
      </div>

      <!-- FULL WIDTH -->
      <div class="details-section full-width">
        <h4>Identity Information</h4>

        <div class="detail-row">
          <span class="label">Aadhaar</span>
          <span class="value"><%= @employee.aadhaar_number.presence || "—" %></span>
        </div>

        <div class="detail-row">
          <span class="label">PAN</span>
          <span class="value"><%= @employee.pan_number.presence || "—" %></span>
        </div>
      </div>

    </div>

  </div>
</div>
