<h2>Bills</h2>

<%= link_to 'New Bill', new_bill_path, class: 'btn btn-primary mb-3' %>

<table class="table table-bordered">
  <tr>
    <th>No</th>
    <th>Date</th>
    <th>Customer</th>
    <th>Total</th>
    <th></th>
  </tr>

  <% @bills.each do |bill| %>
    <tr>
      <td><%= bill.bill_number %></td>
      <td><%= bill.date %></td>
      <td><%= bill.customer.name %></td>
      <td><%= number_to_currency(bill.total) %></td>
      <td><%= link_to 'View', bill_path(bill) %></td>
    </tr>
  <% end %>
</table>
