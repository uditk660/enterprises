<div class="dashboard-container">

  <h2 class="dashboard-title">Welcome, <%= User.first.email %></h2>
  <p class="dashboard-subtitle">Your company management hub</p>

  <div class="menu-grid">
    <!-- Employees -->
    <div class="menu-card">
      <%= link_to companies_path do %>
        <div class="menu-icon">
          <i class="fas fa-users"></i>
        </div>
        <div class="menu-label">Employees</div>
        <span class="menu-badge"><%= @total_employees %></span>
      <% end %>
    </div>

    <!-- Companies -->
    <div class="menu-card">
      <%= link_to companies_path do %>
        <div class="menu-icon">
          <i class="fas fa-building"></i>
        </div>
        <div class="menu-label">Companies</div>
        <span class="menu-badge"><%= @total_companies %></span>
      <% end %>
    </div>

    <!-- Customers -->
    <div class="menu-card">
      <%= link_to customers_path do %>
        <div class="menu-icon">
          <i class="fas fa-user"></i>
        </div>
        <div class="menu-label">Customers</div>
        <span class="menu-badge"><%= @total_customers %></span>
      <% end %>
    </div>

    <!-- Invoices -->
    <div class="menu-card">
      <%= link_to invoices_path do %>
        <div class="menu-icon">
          <i class="fas fa-file-invoice"></i>
        </div>
        <div class="menu-label">Invoices</div>
        <span class="menu-badge"><%= @total_invoices %></span>
      <% end %>
    </div>

    <!-- Payments -->
    <div class="menu-card">
      <%= link_to companies_path do %>
        <div class="menu-icon">
          <i class="fas fa-credit-card"></i>
        </div>
        <div class="menu-label">Payments</div>
      <% end %>
    </div>

    <!-- Reports -->
    <div class="menu-card">
      <%= link_to companies_path do %>
        <div class="menu-icon">
          <i class="fas fa-chart-line"></i>
        </div>
        <div class="menu-label">Reports</div>
      <% end %>
    </div>
  </div>
</div>


