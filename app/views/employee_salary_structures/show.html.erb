<div class="company-page">
  <div class="company-glass-card">

    <div class="action-group">
      <%= link_to "← Salary History",
            company_employee_employee_salary_structures_path(@company, @employee),
            class: "btn-secondary" %>

      <%= link_to "Edit",
            edit_company_employee_employee_salary_structure_path(
              @company, @employee, @salary_structure),
            class: "primary-btn" %>
    </div>

    <div class="company-form-header">
      <h2>Salary Structure</h2>
      <p>Effective from <%= l(@salary_structure.effective_from) %></p>
    </div>

    <div class="form-section">
      <h4>Breakdown</h4>

      <p><strong>Basic:</strong> ₹ <%= @salary_structure.basic %></p>
      <p><strong>HRA:</strong> ₹ <%= @salary_structure.hra %></p>
      <p><strong>Allowances:</strong> ₹ <%= @salary_structure.allowances %></p>
      <p><strong>Deductions:</strong> ₹ <%= @salary_structure.deductions %></p>

      <hr>

      <p>
        <strong>Gross Salary:</strong>
        ₹ <%= @salary_structure.gross_salary %>
      </p>

      <% if @salary_structure.active? %>
        <span class="badge badge-success">ACTIVE STRUCTURE</span>
      <% end %>
    </div>

  </div>
</div>
